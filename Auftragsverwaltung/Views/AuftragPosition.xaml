<Page x:Class="Auftragsverwaltung.Views.AuftragPosition"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Auftragsverwaltung.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AuftragPosition"
      Background="White">

    <Grid Loaded="Grid_Loaded">
        <TextBlock Text="Auftrag / Position" HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="24" Margin="227,10,0,0"/>

        <Label Content="KundenNr:" HorizontalAlignment="Left" Margin="37,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtKundenNr" HorizontalAlignment="Left" Margin="102,59,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="50" Height="18" RenderTransformOrigin="0.546,0.426"/>

        <Label Content="Vorname:" HorizontalAlignment="Left" Margin="166,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtVorname" HorizontalAlignment="Left" Margin="225,59,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" Height="18" RenderTransformOrigin="0.546,0.426"/>

        <Label Content="Nachname:" HorizontalAlignment="Left" Margin="340,55,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="txtNachname" HorizontalAlignment="Left" Margin="410,59,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="102" Height="18" RenderTransformOrigin="0.546,0.426"/>

        <Label Content="Erstelldatum:" HorizontalAlignment="Left" Margin="528,55,0,0" VerticalAlignment="Top"/>
        <DatePicker x:Name="dpDatum" HorizontalAlignment="Left" Margin="606,59,0,0" VerticalAlignment="Top"/>

        <DataGrid x:Name="dgvAuftrag" Margin="16,110,16,200"/>

        <DataGrid x:Name="dgvPosition" Margin="16,294,16,16"/>
        <Button x:Name="cmdSpeichern" Content="Speichern" HorizontalAlignment="Left" Margin="539,21,0,0" VerticalAlignment="Top" Click="cmdSpeichern_Click"/>

    </Grid>
</Page>
